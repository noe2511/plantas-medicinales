{% extends 'base.html.twig' %}

{% block title %}Colorflor index{% endblock %}

{% block body %}
    <h1>Colorflor index</h1>

    <table class="table table-striped">
        <thead>
            <tr class="table-dark">
                <th>Idcolorflor</th>
                <th>Color</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for colorflor in colorflors %}
            <tr>
                <td>{{ colorflor.idcolorflor }}</td>
                <td>{{ colorflor.color }}</td>
                <td>
                    <a href="{{ path('colorflor_show', {'idcolorflor': colorflor.idcolorflor}) }}" class="btn btn-info">Ver detalles</a>
                    <a href="{{ path('editarColor', {'idcolorflor': colorflor.idcolorflor}) }}" class="btn btn-info">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No hay ning√∫n color guardado.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('nuevoColor') }}" class="btn btn-info">Crer nuevo color</a>
{% endblock %}
