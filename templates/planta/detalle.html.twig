{% extends "base.html.twig" %}

{% block title %}Detalles planta{% endblock %}

{% block body %}
<div class="card mb-3" style="max-width: 540px;">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="{{asset('imagenes/' ~ planta.imagen)}}" class="card-img" alt="">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{planta.nombre}}</h5>
          <p class="card-text">{{planta.descripcion}}</p>
          <p class="card-text">{{planta.localizacion}}</p>
          
          <ul>
           {% for parte in planta.parteutilIdparteUtil %}
              <li>{{parte}}</li>
            {% endfor %}
          </ul>
          <ul>
            {% for uso in planta.usomedicoIdusomedico %}
              <li>{{uso}}</li>
            {% endfor %}  
          </ul>
          {#<p class="card-text">{{planta.parteutilIdparteUtil}}</p>
          <p class="card-text">{{planta.usomedicoIdusomedico}}</p>#}
        </div>
      </div>
    </div>
  </div>

{% endblock %}
