{% extends 'base.html.twig' %}

{% block title %}Producto{% endblock %}

{% block body %}
    <h1>Producto</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Idproducto</th>
                <td>{{ producto.idproducto }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ producto.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ producto.descripcion }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ producto.precio }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('producto_index') }}">Volver al listado de productos.</a>

    <a href="{{ path('editarProducto', {'idproducto': producto.idproducto}) }}">Editar</a>

    {{ include('producto/borrarProducto.html.twig') }}
{% endblock %}
